@model tcs.crm.Models.ProfileTypeInsertModel
@if (Model != null)
{
    <div class="popup">
        <a href="#" onclick="$.fancybox.close(); return false;" class="close">✖</a>
        <div id="tabs">
            <ul>
                <li class="active"><a href="javascript:;">Thông tin loại hồ sơ</a></li>
            </ul>
            <div id="tabs-info" class="tabs-ct active">
                @using (Html.BeginForm("Detail", "ProfileType", FormMethod.Post, new { id = "frmProfileType" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                    <div class="tdrow">
                        <div class="field two">
                            <label>Loại hồ sơ</label>
                            <div class="control">
                                @Html.TextBoxFor(m => m.TypeName, new { maxlength = "128" })
                                <i class="ierror">!</i>
                            </div>
                        </div>
                        <div class="field">
                            <label>Quốc gia</label>
                            <div class="control">
                                @Html.DropDownListFor(m => Model.Country, new SelectList(Model.ListCountry, "Value", "Text"))
                                <i class="ierror">!</i>
                            </div>
                        </div>
                    </div>
                    <div class="tdrow">
                        <div class="field full">
                            <table class="table table-striped table-bordered dTableR" id="dt_Step">
                                <thead>
                                    <tr>
                                        <th class="center" style="width:80px;">STT</th>
                                        <th>Giai đoạn</th>
                                        <th class="center" style="width:120px;">
                                            <a href="javascript:;"><i class="icon-plus icon-black"></i> Thêm</a>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="center">1</td>
                                        <td>
                                            <input id="StepName_Add" maxlength="50" type="text" value="">
                                        </td>
                                        <td class="center">
                                            <a href="javascript:;">Lưu</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tdrow">
                        <div class="divbtn">
                            <button class="btn btn-info" type="button">Lưu thông tin</button>
                            <button class="btn btn-danger" type="reset">Nhập mới</button>
                            <button class="btn btn-success" onclick="$.fancybox.close(); return false;">Đóng</button>
                            <div class="frmerr"></div>
                        </div>
                    </div>
                    <div class="clr"></div>
                }
            </div>
            <div class="clr"></div>
        </div>
    </div>
}
