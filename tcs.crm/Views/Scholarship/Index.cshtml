@using tcs.bo
@using tcs.lib
@model tcs.crm.Models.ScholarshipModel
@{
    ViewBag.Title = "Quản lý thông tin học bổng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Html.AddCss("~/Content/ext/jquery.fancybox.css")
    @Html.AddCss("~/Scripts/ext/select2-403/css/select2.css")
    @Html.AddCss("~/Content/min/global.css")
    @Html.AddCss("~/Content/dev/scholarship.css")
}
@section JS_INC
{
    <script type="text/javascript">
        var companyId = @Model.AccountInfo.CompanyId;
    </script>
    @Html.IncludeVersionedJs("/Scripts/min/scholarship.js")
}
@using (Html.BeginForm("Index", "Scholarship", FormMethod.Post, new { id = "searchForm" }))
{
    @Html.HiddenFor(m => m.PageIndex, new { id = "hdfCurrentPage" })
    @Html.HiddenFor(m => m.PageSize)
    <div id="jCrumbs" class="breadCrumb module frmsearch">
        <table border="0" cellspacing="0" cellpadding="2">
            <tr>
                <td>
                    <label>Từ khóa</label>
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Keyword, new { tabindex = "0", @class = "in4", placeholder = "-- Từ khóa --" })
                </td>
                <td>
                    <label>Quốc gia</label>
                </td>
                <td>
                    @Html.DropDownListFor(m => Model.CountryId, new SelectList(Model.ListCountry, "Value", "Text"), new { @class = "in7" })
                </td>
                <td>
                    <label>Trường</label>
                </td>
                <td>
                    @Html.DropDownListFor(m => Model.SchoolId, new SelectList(Model.ListSchool, "Value", "Text"), new { tabindex = "4", @class = "w450" })
                </td>
                <td>
                    <input type="button" class="btn btn-info" value="Tìm" onclick="return doSearch();" />
                    <input type="button" class="btn btn-success" onclick="return insertUpdate(0);" value="Thêm" />
                    <input type="button" class="btn btn-danger" onclick="return deleteScholarship();" value="Xóa" />
                </td>
            </tr>
        </table>
    </div>

    <div class="row-fluid">
        <div class="span12 posre">
            <h3 class="heading">
                Quản lý danh sách học bổng - <span>@Html.Raw(Model.TotalString)</span>
            </h3>
            <table class="table table-striped table-bordered dTableR" id="dt_a">
                <thead>
                    <tr>
                        <th class="center"><input data-type="cbScholarship" type="checkbox" onchange="CheckAll(this, this.checked);" /></th>
                        <th class="center">STT</th>
                        <th class="center">Tên học bổng</th>
                        <th class="center">Trường</th>
                        <th class="center">Yêu cầu</th>
                        <th class="center">Trị giá</th>
                        <th class="center">Số lượng</th>
                        <th class="center">Còn lại</th>
                        <th class="center">Hạn nộp</th>
                        <th class="center">Cập nhật</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.ListScholarship != null)
                    {
                        var index = Model.PageIndex * Model.PageSize;
                        foreach (var item in Model.ListScholarship)
                        {
                            <tr id="Scholarship_@item.Id">
                                <td class="center">
                                    <input data-id="@item.Id" type="checkbox" class="cbdelete cbScholarship" onchange="ToogleCheck();" />
                                </td>
                                <td class="center">@(++index)</td>
                                <td class="rel">
                                    <a href="javascript:;" class="customername" data-id="@item.Id">@item.ScholarshipName</a>
                                </td>
                                <td>@item.SchoolName</td>
                                <td>
                                    @item.Require
                                </td>
                                <td class="center">
                                    @item.Amount
                                </td>
                                <td class="center">
                                    @(item.Quantity)
                                </td>
                                <td class="center">
                                    @(item.Quantity - item.TotalRegister)
                                </td>
                                <td class="center">
                                    @if (item.ExpiredDate.HasValue)
                                    {
                                        @Html.Raw(item.ExpiredDate.Value.ToDateString())
                                    }
                                </td>
                                <td class="center">
                                    @if (item.UpdateDate.HasValue && item.UpdateDate.Value != DateTime.MinValue)
                                    {
                                        @item.UpdateDate.Value.ToString("dd/MM/yyyy HH:mm:ss")
                                    }
                                    else
                                    {
                                        @item.CreateDate.Value.ToString("dd/MM/yyyy HH:mm:ss")
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="paging">
                <div class="span6">
                    <div class="dataTables_info" id="dt_a_info">@Html.Raw(Model.TotalString)</div>
                </div>
                <div class="span6">
                    @Html.Raw(Model.PagerString)
                </div>
            </div>
        </div>
    </div>
}