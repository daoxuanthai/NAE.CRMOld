@using tcs.lib
@model tcs.crm.Models.AccountModel
@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @*@Html.AddCss("~/Content/ext/bootstrap.css")
    @Html.AddCss("~/Content/ext/datepicker.css")*@
    @*@Html.AddCss("~/Content/ext/blue.css")
    @Html.AddCss("~/Content/ext/gebo.css")*@
    @Html.AddCss("~/Content/ext/jquery.fancybox.css")
    @Html.AddCss("~/Content/min/global.css")
    @Html.AddCss("~/Content/dev/account.css")
}
@section JS_INC
{
    @Html.IncludeVersionedJs("/Scripts/min/account.js")
}
@using (Html.BeginForm("Index", "Account", FormMethod.Post, new { id = "searchForm" }))
{
    @Html.HiddenFor(m => m.PageIndex, new { id = "hdfCurrentPage" })
    @Html.HiddenFor(m => m.PageSize)
    <div id="jCrumbs" class="breadCrumb module frmsearch">
        <table border="0" cellspacing="0" cellpadding="2">
            <tr>
                <td>Từ khóa</td>
                <td>
                    @Html.TextBoxFor(m => m.Keyword, new { tabindex = "0", @class = "in4", placeholder = "-- Từ khóa --" })
                </td>
                <td>Từ ngày</td>
                <td>
                    @Html.TextBoxFor(m => m.FromDate, new { tabindex = "2", @class = "datepicker numeric in1" })
                </td>
                <td>Đến ngày</td>
                <td>
                    @Html.TextBoxFor(m => m.ToDate, new { tabindex = "3", @class = "datepicker numeric in1" })
                </td>
                <td>
                    <input type="button" class="btn btn-info" value="Tìm" onclick="return doSearch();" />
                    <input type="button" class="btn btn-success" onclick="return viewUserInfo(0);" value="Thêm" />
                    <input type="button" class="btn btn-danger" onclick="return deleteAccount();" value="Xóa" />
                </td>
            </tr>
        </table>
    </div>

    <div class="row-fluid">
        <div class="span12 posre">
            <h3 class="heading">
                Quản lý danh sách tài khoản - <span>@Html.Raw(Model.TotalString)</span>
            </h3>
            <table class="table table-striped table-bordered dTableR" id="dt_a">
                <thead>
                    <tr>
                        <th class="center"><input data-type="cbUser" type="checkbox" onchange="CheckAll(this, this.checked);" /></th>
                        <th class="center">STT</th>
                        <th class="center">Avatar</th>
                        <th class="center">Tài khoản</th>
                        <th class="center">Họ và tên</th>
                        <th class="center">Email</th>
                        <th class="center">Điện thoại</th>
                        <th class="center">Tạm khóa</th>
                        <th class="center">Reset mật khẩu</th>
                        <th class="center">Ngày tạo</th>
                        <th class="center">Cập nhật</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.ListUser != null)
                    {
                        var index = Model.PageIndex * Model.PageSize;
                        foreach (var item in Model.ListUser)
                        {
                            <tr id="User_@item.Id">
                                <td class="center">
                                    <input data-id="@item.Id" type="checkbox" class="cbdelete cbUser" onchange="ToogleCheck();" />
                                </td>
                                <td class="center">@(index + 1)</td>
                                <td class="center"></td>
                                <td class="rel">
                                    <a href="javascript:;" class="customername" data-id="@item.Id">@item.UserName</a>
                                </td>
                                <td>@item.FullName</td>
                                <td>@item.Email</td>
                                <td class="center">@item.Phone</td>
                                <td class="center">
                                    <input id="lockuser_@item.Id" type="checkbox" @(item.IsLock ? "checked" : "") onchange="return lockUser(@item.Id)" />
                                </td>
                                <td class="center">
                                    <a onclick="return resetPassword('@item.UserName');">Reset</a>
                                </td>
                                <td class="center">
                                    @item.CreateDate.Value.ToDateTimeString()
                                </td>
                                <td class="center">
                                    @(item.UpdateDate.HasValue && item.UpdateDate.Value != DateTime.MinValue ? item.UpdateDate.Value.ToDateTimeString() : "-")
                                </td>
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>
            <div class="paging">
                <div class="span6">
                    <div class="dataTables_info" id="dt_a_info">@Html.Raw(Model.TotalString)</div>
                </div>
                <div class="span6">
                    @Html.Raw(Model.PagerString)
                </div>
            </div>
        </div>
    </div>
}