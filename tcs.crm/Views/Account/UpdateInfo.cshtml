@using tcs.lib
@model tcs.crm.Models.UpdateInfoModel
@{
    ViewBag.Title = "Cập nhật thông tin nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Html.AddCss("~/Content/ext/bootstrap.css")
    @Html.AddCss("~/Content/ext/blue.css")
    @Html.AddCss("~/Content/ext/gebo.css")
    @Html.AddCss("~/Content/min/global.css")
    @Html.AddCss("~/Content/dev/accountinfo.css")
}

@section JS_INC
{
    @Html.IncludeVersionedJs("/Scripts/min/account.js")
}
@using (Html.BeginForm("UpdateInfo", "Account", FormMethod.Post, new { id = "updateForm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserName)
    <table border="0" cellspacing="0" cellpadding="4" class="tblUpdateInfo">
        <tr>
            <td colspan="2">
                <h2>Cập nhật thông tin nhân viên</h2>
            </td>
        </tr>
        <tr>
            <td style="vertical-align: top">
                @if (string.IsNullOrEmpty(Model.Avatar))
                {
                    <img src="/Content/img/noavatar.png" width="150" height="150" class="avatar" />
                }
                else
                {
                    <img src="@Model.Avatar" width="150" height="150" class="avatar" />
                }
                <input type="file" id="AvatarFile" name="AvatarFile" style="display: none" />
                <a href="javascript:;" class="avatarlink" onclick="$('#AvatarFile').trigger('click')">Cập nhật hình đại diện</a>
                <label id="inputfilename" class="avatarfilename"></label>
            </td>
            <td style="vertical-align: top">
                <table border="0" cellspacing="0" cellpadding="4">
                    <tr>
                        <td class="form-name">
                            Họ và tên
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.FullName, new { maxlength = "128", tabindex = "0", style = "width: 200px; float: left;" })
                        </td>
                    </tr>
                    <tr>
                        <td class="form-name">
                            Số điện thoại
                        </td>
                        <td style="vertical-align: top">
                            @Html.TextBoxFor(m => m.Phone, new { maxlength = "50", tabindex = "1", style = "width: 200px; float: left;" })
                        </td>
                    </tr>
                    <tr>
                        <td class="form-name" style="vertical-align: top">
                            Email
                        </td>
                        <td style="vertical-align: top">
                            @Html.TextBoxFor(m => m.Email, new { maxlength = "50", tabindex = "2", style = "width: 200px; float: left;" })
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" class="btn btn-info" value="Lưu thông tin" />
                            <span class="frmerror">@Model.Message</span>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
}