@using tcs.bo
@using tcs.lib
@model tcs.crm.Models.SchoolModel
@{
    ViewBag.Title = "Quản lý thông tin trường";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Html.AddCss("~/Content/ext/jquery.fancybox.css")
    @Html.AddCss("~/Scripts/ext/select2-403/css/select2.css")
    @Html.AddCss("~/Content/min/global.css")
    @Html.AddCss("~/Content/dev/school.css")
}
@section JS_INC
{
    <script type="text/javascript">
        var companyId = @Model.AccountInfo.CompanyId;
    </script>
    @Html.IncludeVersionedJs("/Scripts/min/school.js")
}
@using (Html.BeginForm("Index", "School", FormMethod.Post, new { id = "searchForm" }))
{
    @Html.HiddenFor(m => m.PageIndex, new { id = "hdfCurrentPage" })
    @Html.HiddenFor(m => m.PageSize)
    <div id="jCrumbs" class="breadCrumb module frmsearch">
        <table border="0" cellspacing="0" cellpadding="2">
            <tr>
                <td>
                    <label>Từ khóa</label>
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Keyword, new { tabindex = "0", @class = "in4", placeholder = "-- Từ khóa --" })
                </td>
                <td>
                    <label>Quốc gia</label>
                </td>
                <td>
                    @Html.DropDownListFor(m => Model.CountryId, new SelectList(Model.ListCountry, "Value", "Text"), new { @class = "in7" })
                </td>
                <td>
                    <label>Loại trường</label>
                </td>
                <td>
                    @Html.DropDownListFor(m => Model.SchoolType, new SelectList(Model.ListSchoolType, "Key", "Value"), new { tabindex = "4", @class = "in5" })
                </td>
                <td>
                    <input type="button" class="btn btn-info" value="Tìm" onclick="return doSearch();" />
                    <input type="button" class="btn btn-success" onclick="return insertUpdate(0);" value="Thêm" />
                    <input type="button" class="btn btn-danger" onclick="return deleteSchool();" value="Xóa" />
                </td>
            </tr>
        </table>
    </div>

    <div class="row-fluid">
        <div class="span12 posre">
            <h3 class="heading">
                Quản lý danh sách trường - <span>@Html.Raw(Model.TotalString)</span>
            </h3>
            <table class="table table-striped table-bordered dTableR" id="dt_a">
                <thead>
                    <tr>
                        <th class="center"><input data-type="cbSchool" type="checkbox" onchange="CheckAll(this, this.checked);" /></th>
                        <th class="center">STT</th>
                        <th class="center">Thông tin trường</th>
                        <th class="center">Học bổng</th>
                        <th class="center">Ngày tạo</th>
                        <th class="center">Cập nhật</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.ListSchool != null)
                    {
                        var index = Model.PageIndex * Model.PageSize;
                        foreach (var item in Model.ListSchool)
                        {
                            <tr id="School_@item.Id">
                                <td class="center">
                                    <input data-id="@item.Id" type="checkbox" class="cbdelete cbSchool" onchange="ToogleCheck();" />
                                </td>
                                <td class="center">@(++index)</td>
                                <td class="rel">
                                    <a href="javascript:;" class="customername" data-id="@item.Id">@item.SchoolName</a>
                                    <a href="javascript:;" data-id="@item.Id" class="updatelink">Cập nhật</a>
                                </td>
                                <td class="center">
                                    <a href="/Scholarship?sid=@item.Id" target="_blank">Xem DS học bổng</a>
                                </td>
                                <td class="center">
                                    @item.CreateDate.Value.ToDateTimeString()
                                </td>
                                <td class="center">
                                    @(item.UpdateDate.HasValue && item.UpdateDate.Value != DateTime.MinValue ? item.UpdateDate.Value.ToDateTimeString() : "-")
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="paging">
                <div class="span6">
                    <div class="dataTables_info" id="dt_a_info">@Html.Raw(Model.TotalString)</div>
                </div>
                <div class="span6">
                    @Html.Raw(Model.PagerString)
                </div>
            </div>
        </div>
    </div>
}