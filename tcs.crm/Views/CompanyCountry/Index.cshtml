    <div class="row-fluid">
        <div class="span12 posre">
            <h3 class="heading">
                Quản lý danh sách quốc gia - <span>@Html.Raw(Model.TotalString)</span>
            </h3>
            <table class="table table-striped table-bordered dTableR" id="dt_a">
                <thead>
                    <tr>
                        <th class="center"><input data-type="cbOffice" type="checkbox" onchange="CheckAll(this, this.checked);" /></th>
                        <th class="center">STT</th>
                        <th class="center">Tên quốc gia</th>
                        <th class="center">Đang sử dụng</th>
                        <th class="center">Ngày tạo</th>
                        <th class="center">Cập nhật</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.ListCompanyCountry != null)
                    {
                        var index = Model.PageIndex * Model.PageSize;
                        foreach (var item in Model.ListCompanyCountry)
                        {
                            <tr id="Country_@item.Id">
                                <td class="center">
                                    <input data-id="@item.Id" type="checkbox" class="cbdelete cbOffice" onchange="ToogleCheck();" />
                                </td>
                                <td class="center">@(++index)</td>
                                <td class="rel">@item.CountryName</td>
                                <td class="center">
                                    <input id="country_@item.Id" type="checkbox" @(item.Visible ? "checked" : "") onchange="return updateCountry(@item.Id)" />
                                </td>
                                <td class="center">
                                    @item.CreateDate.Value.ToDateTimeString()
                                </td>
                                <td class="center">
                                    @(item.UpdateDate.HasValue && item.UpdateDate.Value != DateTime.MinValue ? item.UpdateDate.Value.ToDateTimeString() : "-")
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="paging">
                <div class="span6">
                    <div class="dataTables_info" id="dt_a_info">@Html.Raw(Model.TotalString)</div>
                </div>
                <div class="span6">
                    @Html.Raw(Model.PagerString)
                </div>
            </div>
        </div>
    </div>
}