@using tcs.bo
@using tcs.lib
@model tcs.crm.Models.SeminarModel
@{
    ViewBag.Title = "Quản lý thông tin hội thảo";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Html.AddCss("~/Content/ext/jquery.fancybox.css")
    @Html.AddCss("~/Content/ext/perfect-scrollbar.css")
    @Html.AddCss("~/Scripts/ext/select2-403/css/select2.css")
    @Html.AddCss("~/Content/min/global.css")
}
@section JS_INC
{
    @Html.IncludeVersionedJs("/Scripts/min/seminar.js")
}
@using (Html.BeginForm("Index", "Seminar", FormMethod.Post, new { id = "searchForm" }))
{
    @Html.HiddenFor(m => m.PageIndex, new { id = "hdfCurrentPage" })
    @Html.HiddenFor(m => m.PageSize)
    <div id="jCrumbs" class="breadCrumb module frmsearch">
        <table border="0" cellspacing="0" cellpadding="2">
            <tr>
                <td>Từ khóa</td>
                <td>
                    @Html.TextBoxFor(m => m.Keyword, new { tabindex = "0", @class = "in6", placeholder = "-- Từ khóa --" })
                </td>
                <td>Trạng thái</td>
                <td>
                    @Html.DropDownListFor(m => Model.Status, new SelectList(Model.ListStatus, "Key", "Value"), new { tabindex = "4", @class = "in6" })
                </td>
                <td>
                    <input type="button" class="btn btn-info" value="Tìm" onclick="return doSearch();" />
                    <input type="button" class="btn btn-success" onclick="return loadSeminar(0);" value="Thêm" />
                    <input type="button" class="btn btn-danger" onclick="return deleteSeminar();" value="Xóa" />
                </td>
            </tr>
        </table>
    </div>

    <div class="row-fluid">
        <div class="span12 rel">
            <h3 class="heading">
                Quản lý hội thảo - <span>@Html.Raw(Model.TotalString)</span>
            </h3>
            <table class="table table-striped table-bordered dTableR" id="dt_a">
                <thead>
                    <tr>
                        <th class="center"><input data-type="cbseminar" type="checkbox" onchange="CheckAll(this, this.checked);" /></th>
                        <th class="center">STT</th>
                        <th class="center">ID</th>
                        <th class="center">Tên hội thảo</th>
                        <th class="center">Trạng thái</th>
                        <th class="center">DSKH đăng ký</th>
                        <th class="center">Thời gian địa điểm</th>
                        <th class="center">Ngày tạo</th>
                        <th class="center">Cập nhật</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.ListSeminar != null)
                    {
                        var index = (Model.PageIndex * Model.PageSize) + 1;
                        foreach (var item in Model.ListSeminar)
                        {
                            <tr id="Seminar_@item.Id">
                                <td class="center">
                                    <input data-id="@item.Id" type="checkbox" class="cbdelete cbseminar" onchange="ToogleCheck();" />
                                </td>
                                <td class="center">@(index++)</td>
                                <td class="center">@item.Id</td>
                                <td class="rel name">
                                    <a href="javascript:;" class="customername" data-id="@item.Id">@item.Name</a>
                                    <a href="javascript:;" class="updatelink" data-id="@item.Id">Cập nhật</a>
                                </td>
                                <td class="center">
                                    @SeminarStatus.Instant().GetValueByKey(item.Status)
                                    <a href="javascript:;" onclick="return deleteSeminarById(@item.Id)" class="deletelink">Xóa</a>
                                </td>
                                <td class="center">
                                    <a href="/SeminarRegister/@item.Id" target="_blank">Xem DS đăng ký</a>
                                </td>
                                <td class="center">
                                    
                                </td>
                                <td class="center">
                                    @Html.Raw(item.CreateDate.Value.ToDateTimeString(wrap: true))
                                </td>
                                <td class="center">
                                    @Html.Raw(item.UpdateDate.HasValue ? item.UpdateDate.Value.ToDateTimeString(wrap: true) : "-")
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="paging">
                <div class="span6">
                    <div class="dataTables_info" id="dt_a_info">@Html.Raw(Model.TotalString)</div>
                </div>
                <div class="span6">
                    @Html.Raw(Model.PagerString)
                </div>
            </div>
        </div>
    </div>
}