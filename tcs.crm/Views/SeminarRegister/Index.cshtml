@using tcs.bo
@using tcs.lib
@model tcs.crm.Models.SeminarRegisterModel
@{
    ViewBag.Title = "Quản lý thông tin đăng ký hội thảo";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Html.AddCss("~/Content/ext/jquery.fancybox.css")
    @Html.AddCss("~/Content/ext/perfect-scrollbar.css")
    @Html.AddCss("~/Scripts/ext/select2-403/css/select2.css")
    @Html.AddCss("~/Content/min/global.css")
    @Html.AddCss("~/Content/dev/seminar.css")
}
@section JS_INC
{
    @Html.IncludeVersionedJs("/Scripts/min/seminarregister.js")
}
@using (Html.BeginForm("Index", "SeminarRegister", FormMethod.Post, new { id = "searchForm" }))
{
    @Html.HiddenFor(m => m.SeminarId)
    @Html.HiddenFor(m => m.IsAttend)
    @Html.HiddenFor(m => m.PageIndex, new { id = "hdfCurrentPage" })
    @Html.HiddenFor(m => m.PageSize)
    <div id="jCrumbs" class="breadCrumb module frmsearch">
        <table border="0" cellspacing="0" cellpadding="2">
            <tr>
                <td>Từ khóa</td>
                <td>
                    @Html.TextBoxFor(m => m.Keyword, new { tabindex = "0", @class = "in6", placeholder = "-- Từ khóa --" })
                </td>
                <td>Địa điểm</td>
                <td>
                    @Html.DropDownListFor(m => Model.SeminarPlaceId, new SelectList(Model.ListSeminarPlace, "Value", "Text"), new { tabindex = "4", @class = "in9" })
                </td>
                <td>Nhân viên</td>
                <td>
                    @Html.DropDownListFor(m => Model.TitleId, new SelectList(Model.ListTitle, "Value", "Text"), new { tabindex = "4", @class = "in8 select2" })
                </td>
                <td>
                    <input type="button" class="btn btn-info" value="Tìm" onclick="return doSearch();" />
                    <input type="button" class="btn btn-danger" onclick="return deleteSeminarRegister();" value="Xóa" />
                    <input id="btnexcel" type="button" class="btn btn-info" value="Xuất Excel" />
                </td>
            </tr>
        </table>
    </div>

    <div class="row-fluid">
        <div class="span12 rel">
            <h3 class="heading">
                Quản lý DSKH đăng ký hội thảo <b>@Model.SeminarName</b> - <span>@Html.Raw(Model.TotalString)</span>
            </h3>
            <table class="table table-striped table-bordered dTableR" id="dt_a">
                <thead>
                    <tr>
                        <th class="center"><input data-type="cbseminar" type="checkbox" onchange="CheckAll(this, this.checked);" /></th>
                        <th class="center">STT</th>
                        <th class="center">Mã ID</th>
                        <th class="center">Tên khách hàng</th>
                        <th class="center">Nhân viên</th>
                        <th class="center">Địa điểm</th>
                        <th class="center">Trường 1</th>
                        <th class="center">Trường 2</th>
                        <th class="center">Trường 3</th>
                        <th class="center">Có tham dự</th>
                        <th class="center">Cập nhật</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.ListSeminarRegister != null)
                    {
                        var index = (Model.PageIndex * Model.PageSize) + 1;
                        foreach (var item in Model.ListSeminarRegister)
                        {
                            <tr id="Register_@item.Id">
                                <td class="center">
                                    <input data-id="@item.Id" type="checkbox" class="cbdelete cbseminar" onchange="ToogleCheck();" />
                                </td>
                                <td class="center">@(index++)</td>
                                <td class="center">@item.TicketId</td>
                                <td class="rel name">
                                    <ul class="info">
                                        <li><a href="javascript:;" class="customername" data-id="@item.Id">Họ tên: @item.FullName</a></li>
                                        @if (!string.IsNullOrEmpty(item.Phone))
                                        {
                                            <li>Điện thoại: <span>@item.Phone</span></li>
                                        }
                                        @if (!string.IsNullOrEmpty(item.Email))
                                        {
                                            <li>Email: <span>@item.Email</span></li>
                                        }
                                        @if (item.Source > 0)
                                        {
                                            <li>Nguồn: @CustomerSource.Instant().GetValueByKey(item.Source)</li>
                                        }
                                    </ul>
                                    <a href="javascript:;" class="updatelink" data-id="@item.Id" data-cid="@item.CustomerId">Cập nhật</a>
                                </td>
                                <td class="center">@item.EmployeeName</td>
                                <td class="center">
                                    @{
                                        var place = string.Empty;
                                        if (item.SeminarPlaceId > 0 && Model.ListSeminarPlace != null
                                            && Model.ListSeminarPlace.Any(i => i.Value == item.SeminarPlaceId.ToString()))
                                        {
                                            place = Model.ListSeminarPlace.FirstOrDefault(i => i.Value == item.SeminarPlaceId.ToString()).Text;
                                        }
                                    }
                                    @place
                                    <a href="javascript:;" onclick="return deleteSeminarRegister(@item.Id, '@item.FullName')" class="deletelink">Xóa</a>
                                </td>
                                <td class="center">
                                    @item.School1<br />
                                    @item.School1Time
                                </td>
                                <td class="center">
                                    @item.School2<br />
                                    @item.School2Time
                                </td>
                                <td class="center">
                                    @item.School3<br />
                                    @item.School3Time
                                </td>
                                <td class="center">
                                    <input type="checkbox" @(item.IsAttend ? "checked" : "") />
                                </td>
                                <td class="center">
                                    @if (item.UpdateDate.HasValue && item.UpdateDate.Value != DateTime.MinValue)
                                    {
                                        @Html.Raw(item.UpdateDate.HasValue ? item.UpdateDate.Value.ToDateTimeString() : "-")
                                    }
                                    else
                                    {
                                        @Html.Raw(item.CreateDate.Value.ToDateTimeString())
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="paging">
                <div class="span6">
                    <div class="dataTables_info" id="dt_a_info">@Html.Raw(Model.TotalString)</div>
                </div>
                <div class="span6">
                    @Html.Raw(Model.PagerString)
                </div>
            </div>
        </div>
    </div>
}