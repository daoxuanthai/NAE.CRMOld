@using tcs.bo
@using tcs.lib
@model tcs.crm.Models.CompanyTitleModel
@{
    ViewBag.Title = "Quản lý thông tin nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Html.AddCss("~/Content/ext/jquery.fancybox.css")
    @Html.AddCss("~/Scripts/ext/select2-403/css/select2.css")
    @Html.AddCss("~/Content/min/global.css")
    @Html.AddCss("~/Content/dev/company.css")
}
@section JS_INC
{
    <script type="text/javascript">
        var companyId = @Model.AccountInfo.CompanyId;
    </script>
    @Html.IncludeVersionedJs("/Scripts/min/company-title.js")
}
@using (Html.BeginForm("Index", "CompanyTitle", FormMethod.Post, new { id = "searchForm" }))
{
    @Html.HiddenFor(m => m.PageIndex, new { id = "hdfCurrentPage" })
    @Html.HiddenFor(m => m.PageSize)
    <div id="jCrumbs" class="breadCrumb module frmsearch">
        <table border="0" cellspacing="0" cellpadding="2">
            <tr>
                <td>
                    <label>Từ khóa</label>
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Keyword, new { tabindex = "0", @class = "in4", placeholder = "-- Từ khóa --" })
                </td>
                <td>
                    <label>Từ ngày</label>
                </td>
                <td>
                    @Html.TextBoxFor(m => m.FromDate, new { tabindex = "2", @class = "datepicker numeric in1" })
                </td>
                <td>
                    <label>Đến ngày</label>
                </td>
                <td>
                    @Html.TextBoxFor(m => m.ToDate, new { tabindex = "3", @class = "datepicker numeric in1" })
                </td>
                <td>
                    <label>Văn phòng</label>
                </td>
                <td>
                    @Html.DropDownListFor(m => Model.OfficeId, new SelectList(Model.ListOffice, "Value", "Text"), new { @class = "in7" })
                </td>
                <td>
                    <label>Loại tài khoản</label>
                </td>
                <td>
                    @Html.DropDownListFor(m => Model.UserType, new SelectList(Model.ListUserType, "Key", "Value"), new { tabindex = "4", @class = "in5" })
                </td>
                <td>
                    <input type="button" class="btn btn-info" value="Tìm" onclick="return doSearch();" />
                    <input type="button" class="btn btn-success" onclick="return insertUpdate(0);" value="Thêm" />
                    <input type="button" class="btn btn-danger" onclick="return deleteTitle();" value="Xóa" />
                </td>
            </tr>
        </table>
    </div>

    <div class="row-fluid">
        <div class="span12 posre">
            <h3 class="heading">
                Quản lý danh sách nhân viên - <span>@Html.Raw(Model.TotalString)</span>
            </h3>
            <table class="table table-striped table-bordered dTableR" id="dt_a">
                <thead>
                    <tr>
                        <th class="center"><input data-type="cbTitle" type="checkbox" onchange="CheckAll(this, this.checked);" /></th>
                        <th class="center">STT</th>
                        <th class="center">Tên vị trí</th>
                        <th class="center">Loại tài khoản</th>
                        <th class="center">Tài khoản</th>
                        <th class="center">Họ và tên</th>
                        <th class="center">Tên ngắn gọn</th>
                        <th class="center">Tạm khóa</th>
                        <th class="center">Ngày tạo</th>
                        <th class="center">Cập nhật</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.ListCompanyTitle != null)
                    {
                        var index = Model.PageIndex * Model.PageSize;
                        foreach (var item in Model.ListCompanyTitle)
                        {
                            <tr id="Title_@item.Id">
                                <td class="center">
                                    <input data-id="@item.Id" type="checkbox" class="cbdelete cbTitle" onchange="ToogleCheck();" />
                                </td>
                                <td class="center">@(++index)</td>
                                <td class="rel">
                                    <a href="javascript:;" class="customername" data-id="@item.Id">@item.Title</a>
                                </td>
                                <td class="center">
                                    @if (item.UserType == CompanyTitleType.Leader.Key)
                                    {
                                        <span class="lbl green">Trưởng văn phòng</span>
                                    }
                                    else
                                    {
                                        @(CompanyTitleType.Instant().GetValueByKey(item.UserType))
                                    }
                                </td>
                                <td>@item.UserName</td>
                                <td>@item.UserFullName</td>
                                <td>@item.Code</td>
                                <td class="center">
                                    <input id="lock_@item.Id" type="checkbox" @(item.IsLock ? "checked" : "") onchange="return lockCompanyTitle(@item.Id, @item.CompanyId)" />
                                </td>
                                <td class="center">
                                    @item.CreateDate.Value.ToDateTimeString()
                                </td>
                                <td class="center">
                                    @(item.UpdateDate.HasValue && item.UpdateDate.Value != DateTime.MinValue ? item.UpdateDate.Value.ToDateTimeString() : "-")
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="paging">
                <div class="span6">
                    <div class="dataTables_info" id="dt_a_info">@Html.Raw(Model.TotalString)</div>
                </div>
                <div class="span6">
                    @Html.Raw(Model.PagerString)
                </div>
            </div>
        </div>
    </div>
}