@using tcs.bo
@using tcs.lib
@model tcs.crm.Models.ContractModel
@{
    ViewBag.Title = "Quản lý thông tin hợp đồng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Html.AddCss("~/Content/ext/jquery.fancybox.css")
    @Html.AddCss("~/Content/ext/perfect-scrollbar.css")
    @Html.AddCss("~/Scripts/ext/select2-403/css/select2.css")
    @Html.AddCss("~/Content/min/global.css")
    @Html.AddCss("~/Content/dev/contract.css")
}
@section JS_INC
{
    @Html.IncludeVersionedJs("/Scripts/min/contract.js")
}
@using (Html.BeginForm("Index", "Contract", FormMethod.Post, new { id = "searchForm" }))
{
    @Html.HiddenFor(m => m.PageIndex, new { id = "hdfCurrentPage" })
    @Html.HiddenFor(m => m.PageSize)
    <div id="jCrumbs" class="breadCrumb module frmsearch vertical">
        <table border="0" cellspacing="0" cellpadding="2">
            <tr>
                <td>
                    <label>Từ khóa</label>
                    @Html.TextBoxFor(m => m.Keyword, new { tabindex = "0", @class = "in4", placeholder = "-- Từ khóa --" })
                </td>
                <td>
                    <label>Từ ngày</label>
                    @Html.TextBoxFor(m => m.FromDate, new { tabindex = "2", @class = "datepicker numeric in1" })
                </td>
                <td>
                    <label>Đến ngày</label>
                    @Html.TextBoxFor(m => m.ToDate, new { tabindex = "3", @class = "datepicker numeric in1" })
                </td>
                @if (Model.AccountInfo.IsAdminGroup())
                {
                    <td>
                        <label>Văn phòng</label>
                        @Html.DropDownListFor(m => Model.OfficeId, new SelectList(Model.ListOffice, "Value", "Text"), new { tabindex = "1", @class = "in5" })
                    </td>
                }
                <td>
                    <label>Quốc gia</label>
                    @Html.DropDownListFor(m => Model.CountryId, new SelectList(Model.ListCountryCompany, "Value", "Text"), new { tabindex = "1", @class = "in5 select2" })
                </td>
                <td>
                    <label>Trạng thái</label>
                    @Html.DropDownListFor(m => Model.Status, new SelectList(Model.ListStatus, "Key", "Value"), new { tabindex = "4", @class = "in4" })
                </td>
                @if (Model.ListCompanyTitle != null)
                {
                    <td>
                        <label>NV xử lý</label>
                        @Html.DropDownListFor(m => Model.EmployeeProcessId, new SelectList(Model.ListCompanyTitle, "Value", "Text"), new { tabindex = "1", @class = "in10 select2" })
                    </td>
                }
                <td class="tdbtn">
                    <input type="button" class="btn btn-info" value="Tìm" onclick="return doSearch();" />
                    <input type="button" class="btn btn-danger" onclick="return deleteContract();" value="Xóa" />
                </td>
            </tr>
        </table>
    </div>

    <div class="row-fluid">
        <div class="span12 rel">
            <h3 class="heading">
                Quản lý hợp đồng - <span>@Html.Raw(Model.TotalString)</span>
            </h3>
            <table class="table table-striped table-bordered dTableR" id="dt_a">
                <thead>
                    <tr>
                        <th class="center"><input data-type="cbcontract" type="checkbox" onchange="CheckAll(this, this.checked);" /></th>
                        <th class="center">STT</th>
                        <th class="center">ID</th>
                        <th class="center">Thông tin khách hàng</th>
                        <th class="center w150">Tiến độ</th>
                        <th class="center">Trạng thái</th>
                        <th class="center">Ngày ký hợp đồng</th>
                        <th class="center">Ngày làm visa</th>
                        <th class="center">Nhân viên xử lý</th>
                        <th class="center">Ngày tạo</th>
                        <th class="center">Cập nhật</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.ListContract != null)
                    {
                        var index = (Model.PageIndex * Model.PageSize) + 1;
                        foreach (var item in Model.ListContract)
                        {
                            if(item == null)
                            {
                                continue;
                            }
                            <tr id="contract_@(item.Id)">
                                <td class="center">
                                    <input data-id="@item.Id" type="checkbox" class="cbdelete cbcontract" onchange="ToogleCheck();" />
                                </td>
                                <td class="center">@(index++)</td>
                                <td class="center">@item.Id</td>
                                <td class="rel name">
                                    <ul class="info">
                                        <li><a href="javascript:;" class="customername" data-id="@item.Id">KH: @item.FullName</a></li>
                                        @if (!string.IsNullOrEmpty(item.Phone))
                                        {
                                            <li>Điện thoại: <span>@item.Phone</span></li>
                                        }
                                        @if (!string.IsNullOrEmpty(item.Email))
                                        {
                                            <li>Email: <span>@item.Email</span></li>
                                        }
                                    </ul>
                                    <a href="javascript:;" class="updatelink" data-cid="@item.CustomerId">Cập nhật</a>
                                </td>

                                <td class="center">
                                    <div class="pbar ui-progressbar ui-widget ui-widget-content ui-corner-all" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0">
                                        <div class="ui-progressbar-value ui-widget-header ui-corner-left" style="width: @(item.PercentProcessing)%;">@(item.PercentProcessing)%</div>
                                    </div>
                                </td>
                                <td class="center">
                                    @if (item.Status == ContractStatus.Process.Key)
                                    {
                                        <span class="lbl green">@ContractStatus.Instant().GetValueByKey(item.Status)</span>
                                    }
                                    else
                                    {
                                        @ContractStatus.Instant().GetValueByKey(item.Status)
                                    }
                                    <a href="javascript:;" onclick="return deleteContractById(@item.Id, @item.CustomerId)" class="deletelink">Xóa</a>
                                </td>
                                <td class="center">
                                    @(item.ContractDate != DateTime.MinValue ? item.ContractDate.ToDateString() : "")
                                </td>
                                <td class="center">
                                    @(item.VisaDate != DateTime.MinValue ? item.VisaDate.ToDateString() : "")
                                    @if (item.IsVisa)
                                    {
                                        <span class="lbl green">Đã có visa</span>
                                    }
                                </td>
                                <td class="center care">
                                    @item.EmployeeProcessName
                                </td>
                                <td class="center">
                                    @Html.Raw(item.CreateDate.ToDateTimeString(wrap: true))
                                </td>
                                <td class="center">
                                    @Html.Raw(item.UpdateDate.ToDateTimeString(wrap: true))
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="paging">
                <div class="span6">
                    <div class="dataTables_info" id="dt_a_info">@Html.Raw(Model.TotalString)</div>
                </div>
                <div class="span6">
                    @Html.Raw(Model.PagerString)
                </div>
            </div>
        </div>
    </div>
}