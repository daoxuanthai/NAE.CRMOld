@using tcs.bo
@using tcs.lib
@model tcs.crm.Models.CompanyOfficeModel
@{
    ViewBag.Title = "Quản lý thông tin văn phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Html.AddCss("~/Content/ext/jquery.fancybox.css")
    @Html.AddCss("~/Scripts/ext/select2-403/css/select2.css")
    @Html.AddCss("~/Content/min/global.css")
    @Html.AddCss("~/Content/dev/company.css")
}
@section JS_INC
{
    @Html.IncludeVersionedJs("/Scripts/min/company-office.js")
}
@using (Html.BeginForm("Index", "CompanyOffice", FormMethod.Post, new { id = "searchForm" }))
{
    @Html.HiddenFor(m => m.PageIndex, new { id = "hdfCurrentPage" })
    @Html.HiddenFor(m => m.PageSize)
    <div id="jCrumbs" class="breadCrumb module frmsearch">
        <table border="0" cellspacing="0" cellpadding="2">
            <tr>
                <td>
                    <label>Từ khóa</label>
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Keyword, new { tabindex = "0", @class = "in4", placeholder = "-- Từ khóa --" })
                </td>
                <td>
                    <label>Từ ngày</label>
                </td>
                <td>
                    @Html.TextBoxFor(m => m.FromDate, new { tabindex = "2", @class = "datepicker numeric in1" })
                </td>
                <td>
                    <label>Đến ngày</label>
                </td>
                <td>
                    @Html.TextBoxFor(m => m.ToDate, new { tabindex = "3", @class = "datepicker numeric in1" })
                </td>
                <td>
                    <label>Tỉnh thành</label>
                </td>
                <td>
                    @Html.DropDownListFor(m => Model.ProvinceId, new SelectList(Model.ListProvince, "Value", "Text"), new { @class = "in7 select2" })
                </td>
                <td>
                    <input type="button" class="btn btn-info" value="Tìm" onclick="return doSearch();" />
                    <input type="button" class="btn btn-success" onclick="return insertUpdate(0);" value="Thêm" />
                    <input type="button" class="btn btn-danger" onclick="return deleteCompanyOffice();" value="Xóa" />
                </td>
            </tr>
        </table>
    </div>

    <div class="row-fluid">
        <div class="span12 posre">
            <h3 class="heading">
                Quản lý danh sách công ty - <span>@Html.Raw(Model.TotalString)</span>
            </h3>
            <table class="table table-striped table-bordered dTableR" id="dt_a">
                <thead>
                    <tr>
                        <th class="center"><input data-type="cbOffice" type="checkbox" onchange="CheckAll(this, this.checked);" /></th>
                        <th class="center">STT</th>
                        <th class="center">Tên văn phòng</th>
                        <th class="center">Tỉnh thành</th>
                        <th class="center">Điện thoại</th>
                        <th class="center">Email</th>
                        <th class="center">Địa chỉ</th>
                        <th class="center">Trạng thái</th>
                        <th class="center">Ngày tạo</th>
                        <th class="center">Cập nhật</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.ListCompanyOffice != null)
                    {
                        var index = Model.PageIndex * Model.PageSize;
                        foreach (var item in Model.ListCompanyOffice)
                        {
                            <tr id="Office_@item.Id">
                                <td class="center">
                                    <input data-id="@item.Id" type="checkbox" class="cbdelete cbOffice" onchange="ToogleCheck();" />
                                </td>
                                <td class="center">@(++index)</td>
                                <td class="rel">
                                    <a href="javascript:;" class="customername" data-id="@item.Id">@item.OfficeName</a>
                                </td>
                                <td class="center">@item.ProvinceName</td>
                                <td class="center">@item.OfficePhone</td>
                                <td class="center">@item.OfficeEmail</td>
                                <td class="center">@item.OfficeAddress</td>
                                <td class="center">
                                    @CompanyOfficeStatus.Instant().GetValueByKey(item.Status)
                                </td>
                                <td class="center">
                                    @item.CreateDate.Value.ToDateTimeString()
                                </td>
                                <td class="center">
                                    @(item.UpdateDate.HasValue && item.UpdateDate.Value != DateTime.MinValue ? item.UpdateDate.Value.ToDateTimeString() : "-")
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="paging">
                <div class="span6">
                    <div class="dataTables_info" id="dt_a_info">@Html.Raw(Model.TotalString)</div>
                </div>
                <div class="span6">
                    @Html.Raw(Model.PagerString)
                </div>
            </div>
        </div>
    </div>
}