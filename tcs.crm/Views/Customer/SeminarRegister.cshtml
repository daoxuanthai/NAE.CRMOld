@model tcs.crm.Models.SeminarRegisterInsertModel
@if (Model != null)
{
    <div class="popup">
        <a href="#" onclick="$.fancybox.close(); return false;" class="close">✖</a>
        <div id="tabs">
            <ul>
                <li class="active"><a href="javascript:;" data-tab="tabs-info">Thông tin đăng ký</a></li>
            </ul>
            <div id="tabs-info" class="tabs-ct active">
                @using (Html.BeginForm("SeminarRegister", "Customer", FormMethod.Post, new { id = "frmSeminarRegister" }))
                {
                    @Html.HiddenFor(m => m.CustomerId)
                    <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                    <div>
                        <div class="tdrow">
                            <div class="field">
                                <label>Tên khách hàng</label>
                                <div class="control">
                                    @Html.TextBoxFor(m => m.CustomerName, new { maxlength = "128", @readonly = "readonly" })
                                    <i class="ierror">!</i>
                                </div>
                            </div>
                            <div class="field">
                                <label>Điện thoại</label>
                                <div class="control">
                                    @Html.TextBoxFor(m => m.CustomerPhone, new { maxlength = "50", @readonly = "readonly", @class = "phone" })
                                    <i class="ierror">!</i>
                                </div>
                            </div>
                            <div class="field">
                                <label>Email</label>
                                <div class="control">
                                    @Html.TextBoxFor(m => m.CustomerEmail, new { maxlength = "50", @readonly = "readonly" })
                                    <i class="ierror">!</i>
                                </div>
                            </div>
                        </div>
                        <div class="tdrow">
                            <div class="field two">
                                <label>Hội thảo</label>
                                <div class="control">
                                    @Html.DropDownListFor(m => Model.SeminarId, new SelectList(Model.ListSeminar, "Value", "Text"))
                                    <i class="ierror">!</i>
                                </div>
                            </div>
							<div class="field">
								<label>Mã ID</label>
								<div class="control">
									@Html.TextBoxFor(m => m.TicketId)
								</div>
							</div>
                        </div>
                        @if (Model.ListSeminarPlace != null)
                        {
                            <div class="tdrow">
                                <div class="field two">
                                    <label>Địa điểm</label>
                                    <div class="control">
                                        @Html.DropDownListFor(m => Model.SeminarPlaceId, new SelectList(Model.ListSeminarPlace, "Value", "Text"))
                                        <i class="ierror">!</i>
                                    </div>
                                </div>
                            </div>
                        }
						<div class="tdrow">
						<div class="field two">
							<label>Trường PV 1</label>
							<div class="control">
								@Html.TextBoxFor(m => m.School1, new { maxlength = "256" })
								<i class="ierror">!</i>
							</div>
						</div>
						<div class="field">
							<label>Thời gian</label>
							<div class="control">
								@Html.TextBoxFor(m => m.School1Time, new { maxlength = "128" })
							</div>
						</div>
					</div>
					<div class="tdrow">
						<div class="field two">
							<label>Trường PV 2</label>
							<div class="control">
								@Html.TextBoxFor(m => m.School2, new { maxlength = "256" })
								<i class="ierror">!</i>
							</div>
						</div>
						<div class="field">
							<label>Thời gian</label>
							<div class="control">
								@Html.TextBoxFor(m => m.School2Time, new { maxlength = "128" })
							</div>
						</div>
					</div>
                        <div class="tdrow">
                            <div class="field full">
                                <label>Ghi chú KH</label>
                                <div class="control">
                                    @Html.TextAreaFor(m => m.CustomerNote, new { maxlength = "500", @rows = 3 })
                                    <i class="ierror">!</i>
                                </div>
                            </div>
                        </div>
                        <div class="tdrow">
                            <div class="field full">
                                <label>Ghi chú</label>
                                <div class="control">
                                    @Html.TextAreaFor(m => m.Note, new { maxlength = "500", @rows = 3 })
                                    <i class="ierror">!</i>
                                </div>
                            </div>
                        </div>
                        <div class="tdrow">
                            <div class="divbtn">
                                <button onclick="return submitSeminarRegister()" class="btn btn-info" type="button">Lưu thông tin</button>
                                <button class="btn btn-danger" type="reset">Nhập mới</button>
                                <button class="btn btn-success" onclick="$.fancybox.close(); return false;">Đóng</button>
                                <div class="frmerr"></div>
                            </div>
                        </div>
                    </div>
                    <div class="clr"></div>
                }
            </div>
            <div class="clr"></div>
        </div>
    </div>
}
