@using tcs.bo;
@model List<RelativesBo>
@if (Model != null)
{
    <table class="table table-striped table-bordered dTableR popuptbl listdata" id="dt_relativeslist">
        <thead>
            <tr>
                <th class="center w40"><input class="cball" data-type="cbrelatives" type="checkbox" onchange="CheckAll(this, this.checked);" /></th>
                <th class="center w80">STT</th>
                <th class="center w250">Họ và tên</th>
                <th class="center w150">Quan hệ với HS</th>
                <th class="center">Nơi ở</th>
                <th class="center">Nghề nghiệp</th>
                <th class="center">Nơi làm việc</th>
                <th class="center">Cập nhật</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                var index = 1;
                foreach (var item in Model)
                {
                    <tr id="relatives_@item.Id">
                        <td style="text-align: center;">
                            <input data-id="@item.Id" data-type="cbrelatives" type="checkbox" class="cbdelete cbrelatives" onchange="ToogleCheck();" />
                        </td>
                        <td class="center">@(index++)</td>
                        <td class="rel">
                            <a href="javascript:;" onclick="return editRelatives(@item.Id)" title="Click để cập nhật">@item.Name</a>
                            <a href="javascript:;" class="updatelink" onclick="return editRelatives(@item.Id)" title="Click để cập nhật">Cập nhật</a>
                        </td>
                        <td class="center">@item.Relationship</td>
                        <td class="center">@item.Address</td>
                        <td class="center">@item.JobName</td>
                        <td class="center">@item.CompanyName</td>
                        <td class="center">
                            @if (item.UpdateDate.HasValue && item.UpdateDate.Value != DateTime.MinValue)
                            {
                                @item.UpdateDate.Value.ToString("dd/MM/yyyy HH:mm:ss")
                            }
                            else
                            {
                                @item.CreateDate.Value.ToString("dd/MM/yyyy HH:mm:ss")
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="center">Chưa có dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>
}