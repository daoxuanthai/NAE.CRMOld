@using tcs.bo;
@model List<RegisterHistoryBo>

 <table class="table table-striped table-bordered dTableR popuptbl listdata" id="dt_registerhistorylist">
        <thead>
            <tr>
                <th class="center w40"><input class="cball" data-type="cbrelatives" type="checkbox" onchange="CheckAll(this, this.checked);" /></th>
                <th class="center w80">STT</th>
                <th class="center">ID</th>
                <th class="center w150">Họ và tên</th>
                <th class="center w150">Số điện thoại</th>
                <th class="center">Email</th>
                <th class="center w150">Link đăng ký</th>
                <th class="center w150">Nội dung tư vân</th>
                <th class="center">Cập nhật</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                var index = 1;
                foreach (var item in Model)
                {
                    <tr id="relatives_@item.Id">
                        <td style="text-align: center;">
                            <input data-id="@item.Id" data-type="cbregister" type="checkbox" class="cbdelete cbregister" onchange="ToogleCheck();" />
                        </td>
                        <td class="center">@(index++)</td>
                        <td class="center">@item.CustomerId</td>
                        <td class="center">@item.FullName</td>
                        <td class="center">@item.Phone</td>
                        <td class="center">@item.Email</td>
                        <td class="center">@item.RegisterLink</td>
                        <td class="center">@item.AdvisoryContent</td>
                        <td class="center">
                            @if (item.UpdateDate.HasValue && item.UpdateDate.Value != DateTime.MinValue)
                            {
                                @item.UpdateDate.Value.ToString("dd/MM/yyyy HH:mm:ss")
                            }
                            else
                            {
                                @item.CreateDate.Value.ToString("dd/MM/yyyy HH:mm:ss")
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="center">Chưa có dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>

