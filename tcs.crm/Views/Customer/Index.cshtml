@using tcs.adapter.Helper
@using tcs.adapter.Sql
@using tcs.bo
@using tcs.lib
@model tcs.crm.Models.CustomerModel
@{
    ViewBag.Title = "Quản lý thông tin khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Html.AddCss("~/Content/ext/jquery.fancybox.css")
    @Html.AddCss("~/Content/ext/perfect-scrollbar.css")
    @Html.AddCss("~/Scripts/ext/select2-403/css/select2.css")
    @Html.AddCss("~/Content/min/global.css")
    @Html.AddCss("~/Content/dev/customer.css")
}
@section JS_INC
{
    @Html.IncludeVersionedJs("/Scripts/min/customer.js")
}
@using (Html.BeginForm("Index", "Customer", FormMethod.Post, new { id = "searchForm" }))
{
    @Html.HiddenFor(m => m.PageIndex, new { id = "hdfCurrentPage" })
    @Html.HiddenFor(m => m.PageSize)
    <div id="jCrumbs" class="breadCrumb module frmsearch vertical">
        <table border="0" cellspacing="0" cellpadding="2">
            <tr>
                <td>
                    <label>Từ khóa</label>
                    @Html.TextBoxFor(m => m.Keyword, new { tabindex = "0", @class = "in4", placeholder = "-- Từ khóa --" })
                </td>
                <td>
                    <label>Từ ngày</label>
                    @Html.TextBoxFor(m => m.FromDate, new { tabindex = "2", @class = "datepicker numeric in1" })
                </td>
                <td>
                    <label>Đến ngày</label>
                    @Html.TextBoxFor(m => m.ToDate, new { tabindex = "3", @class = "datepicker numeric in1" })
                </td>
                <td>
                    <label>Trạng thái</label>
                    @Html.DropDownListFor(m => Model.Status, new SelectList(Model.ListStatus, "Key", "Value"), new { tabindex = "4", @class = "in4" })
                </td>
                <td>
                    <label>Quốc gia</label>
                    @Html.DropDownListFor(m => Model.Country, new SelectList(Model.ListCountry, "Value", "Text"), new { tabindex = "1", @class = "in4 select2" })
                </td>
                @if (AccountHelper.AllowAddPermission(Model.AccountInfo))
                {
                    <td>
                        <label>Phân quyền</label>
                        @Html.DropDownListFor(m => Model.Employee, new SelectList(Model.ListCompanyTitle, "Value", "Text"), new { tabindex = "1", @class = "in6 select2" })
                    </td>
                    <td>
                        <label>Văn phòng</label>
                        @Html.DropDownListFor(m => Model.Office, new SelectList(Model.ListOffice, "Value", "Text"), new { tabindex = "1", @class = "in5" })
                    </td>
                }
                <td>
                    <label>On/Offline</label>
                    @Html.DropDownListFor(m => Model.SourceType, new SelectList(Model.ListCustomerSourceType, "Key", "Value"), new { tabindex = "4", @class = "in1" })
                </td>
                <td>
                    <label>Nguồn</label>
                    @Html.DropDownListFor(m => Model.CustomerSource, new SelectList(Model.ListCustomerSource, "Key", "Value"), new { tabindex = "4", @class = "in4" })
                </td>
                <td>
                    <label>Bậc học</label>
                    @Html.DropDownListFor(m => Model.EducationLevel, new SelectList(Model.ListEducationLevel, "Key", "Value"), new { tabindex = "4", @class = "in4" })
                </td>
                <td class="tdbtn">
                    <input type="button" class="btn btn-info" value="Tìm" onclick="return doSearch();" />
                    <input type="button" class="btn btn-success" onclick="return viewCustomerInfo(0);" value="Thêm" />
                    <input type="button" class="btn btn-danger" onclick="return deleteCustomer();" value="Xóa" />
                    <input id="btnexcel" type="button" class="btn btn-info" value="Xuất Excel" />
                </td>
            </tr>
        </table>
    </div>

    <div class="row-fluid">
        <div class="span12 rel">
            <div class="rightpanel">
                <div class="sort">
                    <b>Sắp xếp theo</b>
                    @Html.DropDownListFor(m => Model.Sort, new SelectList(Model.ListCustomerSort, "Key", "Value"), new { tabindex = "4", @class = "in4" })
                </div>
                @if (AccountHelper.AllowAddPermission(Model.AccountInfo))
                {
                    <div class="permission">
                        <select id="ddlPermission" class="select2">
                            <option value="-1">Phân quyền cho user</option>
                            @foreach (var user in Model.AccountInfo.ListTitle)
                            {
                                var text = (user.UserType != CompanyTitleType.Leader.Key ? "---- " : "") +
                                    (user.UserType == CompanyTitleType.Leader.Key ? user.Title : user.Code) +
                                    " (" + user.UserFullName + ")";
                                <option value="@user.Id">@text</option>
                            }
                        </select>
                        <input type="button" class="btn btn-success" onclick="return addPermission();" value="Phân quyền">
                    </div>
                }
            </div>
            <h3 class="heading">
                Quản lý hồ sơ khách hàng - <span>@Html.Raw(Model.TotalString)</span>
            </h3>
            <table class="table table-striped table-bordered dTableR" id="dt_a">
                <thead>
                    <tr>
                        <th class="center"><input data-type="cbcustomer" type="checkbox" onchange="CheckAll(this, this.checked);" /></th>
                        <th class="center w40">STT</th>
                        <th class="center w40">ID</th>
                        <th class="center w350">Thông tin khách hàng</th>
                        <th class="center">Trạng thái</th>
                        <th class="center w350">Chăm sóc</th>
                        <th class="center">Dự định du học</th>
                        <th class="center">Phân quyền</th>
                        <th class="center">Ngày tạo</th>
                        <th class="center">Cập nhật</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.ListCustomer != null)
                    {
                        var index = (Model.PageIndex * Model.PageSize) + 1;
                        foreach (var item in Model.ListCustomer)
                        {
                            var provinceName = ProvinceDb.Instance.GetProvinceName(item.ProvinceId);
                            var country = "";
                            <tr>
                                <td class="center">
                                    <input data-id="@item.Id" type="checkbox" class="cbdelete cbcustomer" onchange="ToogleCheck();" />
                                    <a href="/Customer?view=@item.Id" target="_blank">#Link</a>
                                </td>
                                <td class="center">@(index++)</td>
                                <td class="center">@item.Id</td>
                                <td class="rel name">
                                    <ul class="info">
                                        <li><a href="javascript:;" class="customername" data-id="@item.Id">Họ tên: @item.Fullname</a></li>
                                        @if (!string.IsNullOrEmpty(item.Phone))
                                        {
                                            <li>Điện thoại: <span>@item.Phone</span></li>
                                        }
                                        @if (!string.IsNullOrEmpty(item.Email))
                                        {
                                            <li>Email: <span>@item.Email</span></li>
                                        }
                                        @if (!string.IsNullOrEmpty(country))
                                        {
                                            <li>Quốc gia quan tâm: <span>@country</span></li>
                                        }
                                        @if (item.ProvinceId > 0)
                                        {
                                            <li>Tỉnh thành: <span>@provinceName</span></li>
                                        }
                                        @if (item.Source > 0)
                                        {
                                            <li>Nguồn: @CustomerSource.Instant().GetValueByKey(item.Source)</li>
                                        }
                                        @if(item.Birthday.HasValue && item.Birthday.Value != DateTime.MinValue)
                                        {
                                            <li>Năm sinh: @item.Birthday.Value.Year</li>
                                        }
                                    </ul>
                                    <a href="javascript:;" class="updatelink" data-id="@item.Id">Cập nhật</a>
                                </td>
                                <td class="center col-action">
                                    <span class="@(item.Status == CustomerStatus.Potential.Key ? "lbl green" : "")">@CustomerStatus.Instant().GetValueByKey(item.Status)</span>
                                    <a href="javascript:;" onclick="return deleteCustomerById(@item.Id)" class="deletelink">Xóa</a>
                                    @if (item.LastCare.HasValue && item.LastCare.Value != DateTime.MinValue && item.LastCare.Value < DateTime.Now.AddDays(-7)
                                            && ViewHelper.IsContinueCare(item.Status))
                                    {
                                        <label class="lbl blue">Chăm sóc gần nhất: @item.LastCare.Value.ToString(ConfigMgr.DefaultDateFormat)</label>
                                    }
                                    @*@if (Model.AccountInfo.TitleType != CompanyTitleType.Agency.Key)
                                    {
                                        <a href="javascript:;" onclick="return seminarRegister(@item.Id)" class="deletelink">Đăng ký hội thảo</a>
                                    }*@
                                </td>
                                <td class="center care">
                                    @if (!string.IsNullOrEmpty(item.AdvisoryNote))
                                    {
                                        <p title="@item.AdvisoryNote">@item.AdvisoryNote</p>
                                    }
                                    @if (item.IsAlarm && item.AlarmTime.HasValue && ViewHelper.IsContinueCare(item.Status))
                                    {
                                        <label class="lbl red">Chăm sóc tiếp vào: @item.AlarmTime.Value.ToString(ConfigMgr.DefaultDateFormat)</label>
                                    }
                                </td>
                                <td class="center">
                                    @if(!string.IsNullOrEmpty(item.CountryName))
                                    {
                                        <text>Quốc gia: <b>@item.CountryName</b></text>
                                    }
                                    @if(!string.IsNullOrEmpty(item.CountryName))
                                    {
                                        <text><br />Năm: <b>@item.AbroadTime</b></text>
                                    }
                                </td>
                                <td class="center">
                                    <span class="@(item.EmployeeId > 0 ? "" : "noemployee")">
                                        @(item.EmployeeId > 0 ? item.EmployeeName : "Chưa phân quyền")
                                    </span>
                                </td>
                                <td class="center">
                                    @Html.Raw(item.CreateDate.Value.ToDateTimeString(wrap: true))
                                </td>
                                <td class="center">
                                    @Html.Raw(item.UpdateDate.HasValue ? item.UpdateDate.Value.ToDateTimeString(wrap: true) : "-")
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="paging">
                <div class="span6">
                    <div class="dataTables_info" id="dt_a_info">@Html.Raw(Model.TotalString)</div>
                </div>
                <div class="span6">
                    @Html.Raw(Model.PagerString)
                </div>
            </div>
        </div>
    </div>
}