@using tcs.bo
@model List<ParentBo>
@if (Model != null)
{
    <table class="table table-striped table-bordered dTableR popuptbl listdata" id="dt_parentlist">
        <thead>
            <tr>
                <th class="center w40"><input class="cball" data-type="cbparent" type="checkbox" onchange="CheckAll(this, this.checked);" /></th>
                <th class="center w80">STT</th>
                <th class="center w350">Thông tin phụ huynh</th>
                <th class="center w500">Nghề nghiệp</th>
                <th class="center">Cập nhật</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                var index = 1;
                foreach (var item in Model)
                {
                    <tr id="parent_@item.Id">
                        <td style="text-align: center;">
                            <input data-id="@item.Id" data-type="cbparent" type="checkbox" class="cbdelete cbparent" onchange="ToogleCheck();" />
                        </td>
                        <td class="center">@(index++)</td>
                        <td class="rel">
                            <ul class="info">
                                <li><a href="javascript:;" onclick="return editParent(@item.Id)" title="Click để cập nhật">Họ tên: @item.Name</a></li>
                                <li>Điện thoại: @item.Phone</li>
                                <li>Mong muốn DH: @CustomerDesire.Instant().GetValueByKey(item.Desire)</li>
                            </ul>
                            <a href="javascript:;" class="updatelink" onclick="return editParent(@item.Id)" title="Click để cập nhật">Cập nhật</a>
                        </td>
                        <td>
                            <ul class="info">
                                <li>Nghề nghiệp: @item.JobName</li>
                                <li>Cơ quan: @item.CompanyName</li>
                                <li>Chức vụ: @item.PositionName</li>
                                <li>Thu nhập: @item.Income</li>
                                @if(!string.IsNullOrEmpty(item.OtherIncome))
                                {
                                    <li>
                                        <p>Thu nhập khác: @item.OtherIncome</p>
                                    </li>
                                }
                            </ul>
                        </td>
                        <td class="center">
                            @if (item.UpdateDate.HasValue && item.UpdateDate.Value != DateTime.MinValue)
                            {
                                @item.UpdateDate.Value.ToString("dd/MM/yyyy HH:mm:ss")
                            }
                            else
                            {
                                @item.CreateDate.Value.ToString("dd/MM/yyyy HH:mm:ss")
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="center">Chưa có dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>
}