@using tcs.bo
@model List<LanguageBo>
@if (Model != null)
{
    <table class="table table-striped table-bordered dTableR popuptbl listdata" id="dt_LanguageList">
        <thead>
            <tr>
                <th class="center w40"><input class="cball" data-type="cblanguage" type="checkbox" onchange="CheckAll(this, this.checked);" /></th>
                <th class="center w80">STT</th>
                <th class="center w250">Ngoại ngữ</th>
                <th class="center">Chứng chỉ</th>
                <th class="center">Điểm số</th>
                <th class="center w250">Ghi chú</th>
                <th class="center">Ngày tạo</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                var index = 1;
                foreach (var item in Model)
                {
                    <tr id="language_@item.Id">
                        <td style="text-align: center;">
                            <input data-id="@item.Id" data-type="cblanguage" type="checkbox" class="cbdelete cblanguage" onchange="ToogleCheck();" />
                        </td>
                        <td class="center">@(index++)</td>
                        <td class="rel">
                            <a href="javascript:;" onclick="return editLanguage(@item.Id)" title="Click để cập nhật">@item.Language</a>
                            <a href="javascript:;" class="updatelink" onclick="return editLanguage(@item.Id)" title="Click để cập nhật">Cập nhật</a>
                        </td>
                        <td class="center">
                            @LanguageCertificate.Instant().GetValueByKey(item.Certificate)
                        </td>
                        <td class="center">@item.Score</td>
                        <td>
                            <p>@Html.Raw(item.Note)</p>
                        </td>
                        <td class="center">
                            @item.CreateDate.Value.ToString("dd/MM/yyyy HH:mm:ss")
                        </td>

                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="center">Chưa có dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>
}