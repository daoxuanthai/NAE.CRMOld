@using tcs.bo
@model List<tcs.bo.StudyAbroadBo>
@if (Model != null)
{
    <table class="table table-striped table-bordered dTableR popuptbl listdata" id="dt_StudyAbroadList">
        <thead>
            <tr>
                <th class="center w40"><input class="cball" data-type="cbabroad" type="checkbox" onchange="CheckAll(this, this.checked);" /></th>
                <th class="center w80">STT</th>
                <th class="center">Tên trường</th>
                <th class="center">Quốc gia</th>
                <th class="center">Ngành học</th>
                <th class="center">Bậc học</th>
                <th class="center">Thời gian</th>
                <th class="center">Năm du học</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                var index = 1;
                foreach (var item in Model)
                {
                    <tr id="abroad_@item.Id">
                        <td style="text-align: center;">
                            <input data-id="@item.Id" data-type="cbabroad" type="checkbox" class="cbdelete cbabroad" onchange="ToogleCheck();" />
                        </td>
                        <td class="center">@(index++)</td>
                        <td class="rel">
                            <a href="javascript:;" onclick="return editStudyAbroad(@item.Id)" title="Click để cập nhật">@item.School</a>
                        </td>
                        <td class="center">@item.CountryName</td>
                        <td>@item.Major</td>
                        <td class="center">
                            @if (item.Level >= 0)
                            {
                                @Html.Raw(StudyLevel.Instant().GetValueByKey(item.Level))
                            }
                        </td>
                        <td>
                            @item.Time
                        </td>
                        <td class="center">
                            @item.Year
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="center">Chưa có dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>
}