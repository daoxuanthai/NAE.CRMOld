@using tcs.lib
@using tcs.crm.Models
@model ImportCustomerModel
@{
    ViewBag.Title = "Import thông tin khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Html.AddCss("~/Content/ext/bootstrap.css")
    @Html.AddCss("~/Content/ext/blue.css")
    @Html.AddCss("~/Content/ext/gebo.css")
    @Html.AddCss("~/Content/min/global.css")
}
@section JS_INC
{
    @Html.IncludeVersionedJs("/Scripts/min/import.js")
}
@using (Html.BeginForm("ImportCustomer", "Customer", FormMethod.Post, new { id = "searchForm", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.PageIndex, new { id = "hdfCurrentPage" })
    @Html.HiddenFor(m => m.PageSize)

    <div id="jCrumbs" class="breadCrumb module">
        <div style="overflow:hidden; position:relative; width: 100%;">
            <div>
                <table border="0" cellspacing="0" cellpadding="2">
                    <tr>
                        <td style="padding-left: 20px;">Chọn file</td>
                        <td style="padding: 0 10px;">
                            <input type="file" name="inputfile" id="inputfile" />
                        </td>
                        <td style="padding: 2px; vertical-align: top;">
                            <input type="button" class="btn btn-info" value="Xem trước" onclick="$('#searchForm').submit()" />
                            <input type="button" class="btn btn-success" value="Lưu" onclick="return saveImportData();" />
                        </td>
                        <td>
                            <a href="~/Files/import.xlsx" target="_blank">Tải file mẫu tại đây</a>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span12">
            <h3 class="heading">Import thông tin khách hàng</h3>
            <table class="table table-striped table-bordered dTableR" id="dt_a">
                <thead>
                    <tr>
                        <th style="text-align: center;"><input id="cbAll" type="checkbox" onchange="CheckAll(this.checked);" /></th>
                        <th class="center">STT</th>
                        <th class="center">Họ và tên</th>
                        <th class="center">Giới tính</th>
                        <th class="center">Ngày sinh</th>
                        <th class="center">Email</th>
                        <th class="center">Số điện thoại</th>
                        <th class="center">Địa chỉ</th>
                        <th class="center">Nội dung</th>
                        <th class="center">Nguồn</th>
                        <th class="center">Ghi chú</th>
                        <th class="center">Quốc gia</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.ListCustomer != null)
                    {
                        foreach (var item in Model.ListCustomer)
                        {
                            <tr>
                                <td style="text-align: center;">
                                    <input id="cb_@item.ID" type="checkbox" class="cbdelete" onchange="ToogleCheck();" />
                                </td>
                                <td class="center">@item.ID</td>
                                <td>@item.FullName</td>
                                <td class="center">@item.Gender</td>
                                <td class="center">@item.Birthday</td>
                                <td class="center">@item.Email</td>
                                <td class="center">@item.Phone</td>
                                <td>@item.Address - @item.Province</td>
                                <td>@item.Content</td>
                                <td class="center">@item.Source</td>
                                <td>@item.Note</td>
                                <td>@item.Country</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="row" style="margin-left: 0;">
                <div class="span6">
                    <div class="dataTables_info" id="dt_a_info">@Html.Raw(Model.TotalString)</div>
                </div>
                <div class="span6">
                    @Html.Raw(Model.PagerString)
                </div>
            </div>
        </div>
    </div>
}

